{
  "name": "Blog Haskell",
  "image": "mcr.microsoft.com/devcontainers/base:bookworm",
  "features": {
    "ghcr.io/devcontainers-contrib/features/haskell:2": {
      "ghcVersion": "9.4.7",
      "cabalVersion": "3.6.2.0-p1",
      "installStack": false
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "haskell.haskell"
      ],
      "settings": {
        "terminal.integrated.cwd": "${containerWorkspaceFolder}/builder.hs"
      }
    }
  },
  "runArgs": [
    "--name=blog.hs"
  ]
}
